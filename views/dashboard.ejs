<%- include("./layouts/header.ejs") %>
<h2 class="mb-4">Welcome <%= user.name %></h2>

<div class="row">
  <div class="col-md-3">
    <ul class="list-group"></ul>
    <% if (users.length > 0) { for (let i =0; i < users.length; i++) { %>
    <li class="list-group-item list-group-item-dark cursor-pointer user-list">
      <img src="<%= users[i]["image"] %>" width="50px", height="50px"> <%=
      users[i]['name'] %> <% if (users[i]['is_online'] == '1') { %>
      <sup class="online-status" id="<%= users[i]["_id"] %>-status">Online</sup>
      <% } else { %>
      <sup class="offline-status" id="<%= users[i]["_id"]%>-status">Offline</sup>
      <% } %>
    </li>
    <% } } %>
  </div>

  <div class="col-md-9">
    <h3 class="start-head">Click to Start</h3>
    <div class="chat-section">
      <div id="chat-container"></div>
      <form action="" id="chat-form">
        <input
          type="text"
          name="message"
          placeholder="Type message"
          id="message"
          class="border"
          required
        />
        <input type="submit" value="Send Message" class="btn btn-primary" />
      </form>
    </div>
  </div>
</div>

<script>
  const sender_id = "<%= user._id %>";
  let socket = io("/user", {
    auth: {
      token: sender_id,
    },
  });

  $(document).ready(function () {
    $(".user-list").click(() => {
      $(".start-head").hide();
      $(".chat-section").show();
    });
  });

  socket.on("getOnline", (data) => {
    console.log("Online");
    $("#"+data.user_id+'-status').text("Online");
    $("#"+data.user_id+'-status').removeClass("offline-status");
    $("#"+data.user_id+'-status').addClass("online-status");
  })

  socket.on("getOffline", (data) => {
    $("#"+data.user_id+'-status').text("Offline");
    $("#"+data.user_id+'-status').removeClass("online-status");
    $("#"+data.user_id+'-status').addClass("offline-status");
    console.log("Offline");
  })

</script>

<%- include("./layouts/footer.ejs") %>
